include ../../config.mk

CFLAGS   += -I../../liblitz -I../../libixp -I../../libwmii \
            -I../../libcext
LDFLAGS  += -L../../liblitz -llitz -L../../libixp -lixp \
            -L../../libwmii -lwmii -L../../libcext -lcext
# Solaris
# LDFLAGS += -lsocket

SRC      = wm.c client.c event.c mouse.c frame.c page.c layoutdef.c layout.c

include layoutdef.mk

OBJ      = ${SRC:.c=.o}

all: wmiiwm

.c.o:
	@echo CC $<
	@${CC} -c ${CFLAGS} $<

wmiiwm: ${OBJ}
	@echo LD $@
	@${CC} -o $@ ${OBJ} ${LDFLAGS}
