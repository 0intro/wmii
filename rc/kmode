#!9PREFIX/bin/rc
# activate shortcuts of the given mode

wmir write /keys/grabkeyb 0
wmir write /keys/lookup /mode/$1

plab_cmd=`{wmir read /wm/event/pageupdate | sed -e 's/\\//'}
if (! ~ $#plab_cmd 0) eval $"plab_cmd

